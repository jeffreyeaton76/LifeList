<% if @current_user == nil %>
  <div class=loginform>
    <%= form_for :session, :as => :user, url: sessions_path, method: :post do |f| %>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Submit" %>
  </div>
  <% end %>
<% else %>
  <div class="navbox">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Add a Sighting", new_post_path %></li>
      <li><%= link_to "My Sightings", user_path(@current_user.id) %></li>
      <li><%= link_to "Edit My Profile", edit_user_path(@current_user) %></li>
      <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
    </ul>
  </div>
<% end %>
