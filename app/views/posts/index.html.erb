<h1 id="header_index">Latest Sightings</h1>
<% @posts.reverse.each do |post| %>
<div class="post">
  <div class="bird_img"><img class="bird_img" src="<%= post.img_url %>" alt="<%= post.bird %>"></div>
  <h2><%= post.bird.titleize %>, <span id="location">in <%= post.city %>, <%= post.state %> by USER.NAME</span></h2>
  <p> <%= post.field_notes %> </p>
  <div class="entry_link"><h3><i><%= link_to "Go to Sighting", post_path(post) %></i></h3></div>
</div>
<% end %>
